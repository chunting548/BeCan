<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:background="#ff14273d"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout android:orientation="horizontal"
        android:id="@+id/venue__top_layout"
        android:background="#ff14273d"
        android:layout_width="fill_parent"
        android:layout_height="50.0dip"
        android:layout_marginLeft="0.0dip"
        android:layout_marginTop="25.0dip">

        <Button
            android:id="@+id/venue__back_button"
            android:background="@drawable/ic_chevron_left_black_24dp"
            android:layout_width="50.0dip"
            android:layout_height="50.0dip"
            android:layout_marginLeft="5.0dip"
            android:onClick="onBackButtonClicked" />

        <TextView
            android:textSize="20.0sp"
            android:textColor="#ffebebeb"
            android:gravity="center"
            android:id="@+id/venue__title_text_view"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1.0" />

        <View
            android:layout_width="50.0dip"
            android:layout_height="50.0dip"
            android:layout_marginLeft="5.0dip" />

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/location_info__main_layout"
        android:background="#ffe6e6e6"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="75.0dip"
        android:gravity="center">

        <ImageView
            android:id="@+id/venue__image"
            android:layout_width="fill_parent"
            android:layout_height="200.0dip"
            android:layout_margin="10.0dip" />

        <View
            android:background="#ffcecece"
            android:layout_width="fill_parent"
            android:layout_height="2.0px"
            android:layout_margin="10.0dip" />

        <TextView
            android:textSize="14.0sp"
            android:textColor="#ff14273d"
            android:ellipsize="none"
            android:gravity="center|top"
            android:id="@+id/venue__description_label"
            android:scrollbars="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10.0dip"
            android:layout_marginTop="10.0dip"
            android:layout_marginRight="10.0dip"
            android:layout_marginBottom="10.0dip"
            android:text="無相關資料"
            android:maxLines="5"
            android:scrollHorizontally="false"
            android:lineSpacingExtra="4.0dip" />

        <View
            android:background="#ffcecece"
            android:layout_width="fill_parent"
            android:layout_height="2.0px"
            android:layout_margin="10.0dip" />

        <TextView
            android:id="@+id/venue__route_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10.0dip"
            android:layout_marginLeft="20.0dip"
            android:layout_marginRight="20.0dip"
            android:layout_marginTop="10.0dip"
            android:clickable="true"
            android:gravity="center|left"
            android:onClick="onRouteToPlace"
            android:text="導航至此地點"
            android:textColor="#ff47aad1"
            android:textSize="20.0sp"
            android:textStyle="bold" />

        <View
            android:background="#ffcecece"
            android:layout_width="fill_parent"
            android:layout_height="2.0px"
            android:layout_margin="10.0dip" />

    </LinearLayout>
</RelativeLayout>